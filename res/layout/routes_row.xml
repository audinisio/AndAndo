<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:paddingTop="5px" android:paddingBottom="5px">

    <ImageView
        android:id="@+id/icon"
        android:paddingRight="10px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
	
	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		
		<LinearLayout android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			
			<TextView android:id="@+id/title" xmlns:android="http://schemas.android.com/apk/res/android"
			    android:textSize="17px"
				android:textStyle="bold"
				android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:textColor="#ffffff"/>
			    
			<TextView android:id="@+id/date"
			    android:textSize="11px"
				android:layout_width="wrap_content"
			    android:layout_height="wrap_content" 
			    android:text="hoy"
			    android:layout_marginLeft="10px"
			    android:layout_marginRight="7px"
			    android:textColor="#ffffff" />
			    
		</LinearLayout>
		    
		<LinearLayout android:orientation="horizontal"
			android:paddingTop="5px"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">

			<TextView android:id="@+id/time" xmlns:android="http://schemas.android.com/apk/res/android"
				android:textSize="12px"
				android:textStyle="italic"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content" android:textColor="#eeeeee"/>
		    
			<TextView android:id="@+id/distance" xmlns:android="http://schemas.android.com/apk/res/android"
				android:paddingLeft="15px"
				android:textSize="12px"
				android:textStyle="italic"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content" android:textColor="#eeeeee"/>
			    
			<TextView android:id="@+id/marks" xmlns:android="http://schemas.android.com/apk/res/android"
				android:paddingLeft="15px"
				android:textSize="12px"
				android:textStyle="italic"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content" android:textColor="#eeeeee"/>
			    
		</LinearLayout>  
		
		<LinearLayout android:orientation="horizontal"
			android:paddingTop="5px"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">

			<TextView android:id="@+id/group" xmlns:android="http://schemas.android.com/apk/res/android"
				android:textSize="12px"
				android:textStyle="italic"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content" android:textColor="#eeeeee"/>
		    
			<TextView android:id="@+id/coordinates" xmlns:android="http://schemas.android.com/apk/res/android"
				android:paddingLeft="15px"
				android:textSize="12px"
				android:textStyle="italic"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content" android:textColor="#eeeeee"/>
			    
			<TextView android:id="@+id/in_web"
				android:paddingLeft="15px"
				android:textSize="12px"
				android:textStyle="italic"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content" android:textColor="#eeeeee"/>
			    
		</LinearLayout>  
		    
	</LinearLayout>    
    
</LinearLayout>